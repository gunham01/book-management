doctype html 
html 
    head
        title Book List 
        link(rel="stylesheet", href="/css/common.css")
        link(rel="stylesheet", href="/css/book/books.css")
        link(rel="stylesheet", href="/css/header.css")
    body
        include ../includes/header.pug
        .background
            .container
                h2 Danh sách sách
                //- .filter-container
                if books.length > 0
                ul.book-list
                    each book, idx in books
                        li.book-list-item
                            .book-cover
                                img(src=`/img/cover/${book.cover}`)
                            .book-info
                                h3.book-title=book.title
                                p=book.description
                                a(href=`books/${book.id}` title="Xem thêm")
                    li.btn-add
                        a(href="books/create") + Thêm
        include ../includes/footer.pug